        "id": "97440a5695968cc4",
        "type": "function",
        "z": "651af9bb9a46e4b0",
        "name": "db.user.opt()",
        "func": "// db.user.opt()\nconst DB  = global.get(\"DB\") || { user: [] };\nlet   user = DB.user ;\n\nconst nowDate = new Date();\nconst now     = nowDate.getTime();\nconst type    = msg.req?.params?.type;\n\n// ADD\nif (type === \"add\") {\n  user.push({\n    id: now,\n    username: (msg.payload.username || \"\").trim(),\n    password: (msg.payload.password || \"\").trim(), // istersen burada hash’le\n    active: true,\n    stamp: { createdAt: now, ip: msg.req.ip, user: \"\", email: \"\" },\n    dateTime: nowDate.toLocaleString(\"tr-TR\", { hour12: false })\n  });\n  DB.user = user; global.set(\"DB\", DB);\n  return [ msg, null ];\n}\n\n// id ile kullanıcıyı bul\nconst index = user.findIndex(x => String(x.id) === String(msg.payload.id));\nif (index === -1) {\n  msg.error = { message: \"id ile eşleşen bir kayıt bulunamadı\" };\n  return [ null, msg ];\n}\n\nswitch (type) {\n  case \"update\": {\n    const newU  = (msg.payload.username || \"\").trim();\n    const origU = (msg.payload.origUsername || \"\").trim();\n    if (newU !== origU) user[index].username = newU;\n\n    // Parola girilmişse değiştir\n    const newP = (msg.payload.password || \"\").trim();\n    if (newP) user[index].password = newP;\n\n    break;\n  }\n  case \"activate\":\n    user[index].active = true;\n    break;\n\n  case \"deactivate\":\n    user[index].active = false;\n    break;\n\n  default:\n    msg.error = { message: `${type} desteklenmiyor.` };\n    return [ null, msg ];\n}\n\nuser[index].stamp    = { createdAt: now, ip: msg.req.ip, user: \"\", email: \"\" };\nuser[index].dateTime = nowDate.toLocaleString(\"tr-TR\", { hour12: false });\n\nDB.user = user; global.set(\"DB\", DB);\nreturn [ msg, null ];\n",
