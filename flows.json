        "id": "7083b2826db710fa",
        "type": "function",
        "z": "651af9bb9a46e4b0",
        "name": "validation",
        "func": "// validation (user)\nconst typeLookup = {\n    add: {\n        text: \"Ekleme\",\n        requireArgs: [\"username\", \"password\"]\n    },\n    update: {\n        text: \"Güncelle\",\n        requireArgs: [\"id\", \"username\", \"origUsername\"]\n    },\n    activate: {\n        text: \"Aktifleştirme\",\n        requireArgs: [\"id\"]\n    },\n    deactivate: {\n        text: \"Pasifleştirme\",\n        requireArgs: [\"id\"]\n    }\n};\n\nconst type = msg.req.params.type;\nif (!typeLookup[type]) {\n    msg.error = { message: `${type} geçersiz bir parametre değeridir.` };\n    return [null, msg];\n}\n\nif (!typeLookup[type].requireArgs.every(a => (msg.payload[a] ?? \"\").toString().trim() !== \"\")) {\n    msg.error = { message: `${typeLookup[type].text} için ${typeLookup[type].requireArgs.join(\", \")} zorunlu.` };\n    return [null, msg];\n}\n\n// update özel kontrol\nif (type === \"update\") {\n    const newU = (msg.payload.username || \"\").trim();\n    const origU = (msg.payload.origUsername || \"\").trim();\n    if (newU === origU && !msg.payload.password) {\n        msg.error = { message: \"Herhangi bir güncelleme yapmadınız.\" };\n        return [null, msg];\n    }\n}\n\nreturn msg;\n",
